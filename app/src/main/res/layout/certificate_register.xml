<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25sp"
                android:text="자격증등록"
                android:textColor="@color/colorAccent"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/certificate_name"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:hint="자격증명을 입력해주세요"
                android:singleLine="true" />

            <EditText
                android:id="@+id/certificate_serial_num"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:hint="자격증번호를 입력해주세요"
                android:singleLine="true" />

            <EditText
                android:id="@+id/birthday"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:hint="생년월일(YYYY-MM-DD)"
                android:inputType="text|date" />

            <EditText
                android:id="@+id/certificate_date"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:hint="발급날짜(YYYY-MM-DD)"
                android:inputType="text|date" />

            <EditText
                android:id="@+id/certificate_institution"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:hint="발급기관을 입력해주세요" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp">
                <ImageView
                    android:id="@+id/cert_reg_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DBDBDB"
                    android:clickable="true"
                    android:scaleType="centerCrop" />
                <TextView
                    android:id="@+id/picture_reg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자격증 사진을 첨부해주세요"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"
                    android:clickable="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="※인증 시간이 다소 걸릴 수 있습니다."
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textColor="#ff0000"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/buttonCertificate"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_design"
        android:text="인증" />

</LinearLayout>


