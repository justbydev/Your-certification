<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_margin="20sp">
        <ImageView
            android:id="@+id/certi_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DBDBDB"
            android:clickable="true"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/picture_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진을 추가해주세요"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:clickable="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사진 화면을 다시 누르면 다시 앨범으로 연결됩니다"
        android:layout_marginRight="20sp"
        android:gravity="right"
        android:textColor="#000000"/>
    <CheckBox
        android:id="@+id/board_upload_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시판 업로드"
        android:layout_gravity="right"
        android:layout_marginRight="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/final_auth_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증하기"/>
        <Button
            android:id="@+id/auth_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소하기"
            android:layout_marginRight="20sp"/>

    </LinearLayout>

</LinearLayout>