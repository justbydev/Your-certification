<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_margin="10sp">
            <EditText
                android:id="@+id/searchedittext"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="8"
                android:hint="자격증을 검색해주세요">
            </EditText>
            <Button
                android:id="@+id/searchbutton"
                android:layout_width="0sp"
                android:layout_height="45sp"
                android:layout_weight="2"
                android:text="검색"></Button>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp">
                    <TextView
                        android:id="@+id/mylocation"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8.5"
                        android:textSize="13sp"
                        android:text="내 위치를 눌러주세요"/>
                    <TextView
                        android:id="@+id/melocate"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="내위치 "
                        android:textSize="15sp"
                        android:textColor="#ff0000"
                        android:layout_alignParentRight="true"
                        android:clickable="true"/>
                </LinearLayout>
                <ViewFlipper
                    android:id="@+id/text_slide"
                    android:layout_width="match_parent"
                    android:layout_height="170sp"
                    android:layout_margin="10sp"
                    android:background="#F5A9D0">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:text="여러분의 숨겨진 재능을 찾으세요"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:text="여러 자격증 정보를 제공합니다"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:text="여러분의 자격증을 인증하세요"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:text="다양한 자격증에 도전하세요"
                        android:gravity="center"/>
                </ViewFlipper>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/gisulsa"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        android:layout_weight="1"
                        android:text="기술사"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:background="#E6E6E6"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/gineong"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        android:layout_weight="1"
                        android:text="기능사"
                        android:textColor="#000000"
                        android:background="#E6E6E6"
                        android:gravity="center"
                        android:layout_marginLeft="3sp"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/gisa"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        android:layout_weight="1"
                        android:text="기사"
                        android:gravity="center"
                        android:layout_marginLeft="3sp"
                        android:layout_marginRight="10sp"
                        android:textColor="#000000"
                        android:background="#E6E6E6"
                        android:clickable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/guitar"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        android:layout_weight="1"
                        android:text="지도사/기타/취미"
                        android:gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="3sp"
                        android:textColor="#000000"
                        android:background="#E6E6E6"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/sanup"
                        android:layout_width="0sp"
                        android:layout_height="70sp"
                        android:layout_weight="1"
                        android:text="산업기사"
                        android:gravity="center"
                        android:layout_marginTop="3sp"
                        android:layout_marginLeft="3sp"
                        android:layout_marginRight="10sp"
                        android:textColor="#000000"
                        android:background="#E6E6E6"
                        android:clickable="true"/>

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/grid_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="300sp"
                    android:layout_margin="10sp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>